@inject NavigationManager NavigationManager

<div class="card-header">
    <div class="row">
        <div class="col text-start">
            <h3>@Titulo</h3>
        </div>
        <div class="col text-end">
            <button class="btn btn-sm btn-secondary rounded-circle" @onclick="async () => await OnClickAdd()">
                <Icon Name="IconName.Plus" />
            </button>
        </div>
    </div>

</div>

@code {
    [Parameter]
    public string Titulo { get; set; }

    [Parameter]
    public EventCallback<string> OnClickAddSelected { get; set; }

    private async Task OnClickAdd()
    {
        await OnClickAddSelected.InvokeAsync();
    }

    
}


